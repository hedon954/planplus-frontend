<view class="rate-container vertical-align smt-rate-wrap">
    <view 
        class="stars-wrap vertical-align"
        bindtouchend="touchEnd" 
    >
        <view class="stars-item smt-star-wrap" s-for="{{list}}">
            <smt-gov-icon
                name="{{item.icon}}"
                size="{{starSize}}"
                color="{{item.color}}"
                data-index="{{index}}"
                bind:tap="changeStars"
            ></smt-gov-icon>
        </view>
    </view>
    <view 
        s-if="{{hasTipText}}"
        class="tip-wrap smt-tip-wrap"
        style="color: {{tipTextColor}}"
    >{{tipText || defaultTipText + 'åˆ†'}}</view>
</view>