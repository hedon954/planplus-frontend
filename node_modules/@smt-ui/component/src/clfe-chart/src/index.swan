<view class="canvas-container" s-if="renderType !== 'svg'">
    <canvas
        class="canvas-handler"
        canvas-id="{{chartOptions.canvasId}}"
        style="width:{{chartOptions.canvasWidth + 'px'}}; height:{{chartOptions.canvasHeight + 'px'}}"
    />

    <canvas
        class="canvas-handler-axis" 
        canvas-id="{{chartOptions.canvasId}}Axis" 
        style="width:{{chartOptions.canvasWidth + 'px'}}; height:{{chartOptions.canvasHeight + 'px'}};"
    />
    
    <canvas
        class="canvas-handler-tooltip" 
        canvas-id="{{chartOptions.canvasId}}ToolTip"
        bindtouchstart="handleTouchStart"
        style="width:{{chartOptions.canvasWidth + 'px'}}; height:{{chartOptions.canvasHeight + 'px'}} ; "
    />
</view>

<view class="svg-warper" bindtouchstart="handleTouchStart" s-else-if="renderType === 'svg'">
    <svg s-if="{{svgRefresh}}" xmlns="http://www.w3.org/2000/svg" width="{{chartOptions.canvasWidth}}" height="{{chartOptions.canvasHeight}}" version="1.1" class="svg-chart">
        <block s-for="item, index in svgData">
            <path
                s-if="item.tagName === 'path'"
                d="{{item.d}}"
                stroke="{{item.stroke}}"
                fill="{{item.fill}}"
                stroke-width="{{item['stroke-width']}}"
                stroke-dasharray="{{item['stroke-dasharray']}}"
                style="{{item.style}}"
            >
            </path>
            <circle
                s-if="item.tagName === 'circle'"
                r="{{item.r}}"
                cx="{{item.cx}}"
                cy="{{item.cy}}"
                fill="{{item.fill}}"
                stroke="{{item.stroke}}"
                stroke-width="{{item.stroke}}"
                stroke-dasharrday="{{item['stroke-dasharray']}}"
            >
            </circle>
            <rect 
                s-if="item.tagName === 'rect'"
                x="{{item.x}}"
                y="{{item.y}}"
                width="{{item.width}}"
                height="{{item.height}}"
                fill="{{item.fill}}"
            />  
        </block>
    </svg>
    <block s-for="item, index in svgData">
        <text 
            s-if="item.tagName === 'text'"
            style="{{item.style}}"
        >{{item.content}}</text>
    </block>
    <view
        class="canvas-tooltip"
        style="{{toolTipStyle}} display: {{isShowTip ? 'block' : 'none'}}"
    >
        <view class="title">{{categoryData}}</view>

        <block s-for="item,index in tooltipTextArray">
            <view class="content"><text class="dot" style="background-color: {{item.color}}"></text>{{item.text}}</view>
        </block>
    </view>
</view>


