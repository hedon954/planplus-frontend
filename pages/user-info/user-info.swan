<view class="info-container">
    <view class="info-card">
        <view class="username-box">
            <text class="username">{{userNickname}}</text>
            <image src="{{userAvatarUrl == undefined ? '../../images/test_avatar.JPG' : userAvatarUrl}}"
                class="avatar">
            </image>
        </view>
        <view class="detail">
            <text class="age-box">{{userAge}}</text>
            <text class="gender-box">{{userGenderText}}</text>
            <button class="update-botton" bind:tap="goToDetail">
                <smt-icon name="comment-editor" color="#6D6E74"></smt-icon>
            </button>

        </view>
    </view>
