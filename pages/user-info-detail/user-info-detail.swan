<view class="info-detail-container">
    <view class="card-area">
        <view class="avatar-item">
            <text class="title">编辑资料</text>
            <image src={{userAvatarUrl}}
                class="avatar"
                bindtap="chooseImage">
            </image>
        </view>
        <view class="item border-bottom">
            <text class="property">昵称</text>
            <input class="name-input"
                type="text"
                value={{userNickname}}
                bind:change="nicknameChange"/>
        </view>
        <view class="item border-bottom">
            <text class="property">生日</text>
            <picker mode="date"
                    class="birthday"
                    value={{userBirthdayText}}
                    bind:change="dateChange">
                <view>
                   {{userBirthday}}
                </view>
            </picker>
        </view>
        <view class="item border-bottom">
            <text class="property">性别</text>
            <picker mode="selector"
                class="birthday"
                range="{{selector}}"
                range-key="name"
                value={{userGender}}
                bind:change="genderChange">
                {{userGenderText}}
            </picker>
        </view>
        <view class="button-box">
            <button class="button changePwd" bind:tap="btnPswChanged">修改密码</button>
            <button class="button" bind:tap="btnComfirm">确定</button>
        </view>
    </view>
    <!--to do-->
</view>